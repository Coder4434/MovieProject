
@model MovieProject.Models.Film

<div class="lbl_font">
    <h2>Film Sil</h2>

    <p>Bu filmi silmek istediğinizden emin misiniz?</p>

    <div>
        <strong>@Model.AdiTurkce (@Model.AdiIngilizce)</strong>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a href="@Url.Action("Index", "Film")" class="btn btn-secondary">İptal</a>
    </form>
</div>


