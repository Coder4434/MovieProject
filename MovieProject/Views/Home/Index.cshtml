@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="home-container">
    <div class="welcome-card">
        <h1>Film ve Dizi Arşivine Hoş Geldiniz! 🎬</h1>
        <p>Favori filmlerini ve dizilerini keşfet, IMDb puanlarına göz at ve izleme listeni oluştur!</p>
        <a href="@Url.Action("Index", "Film")" class="btn-primary">Filmleri Keşfet</a>
    </div>
</div>

<style>
    /* Sayfa arka planını düzelt */
    body {
        background-color: #f4f4f4; /* Açık gri arka plan */
        margin: 0;
        padding: 0;
    }

    /* Navbar (Menü) düzeltilmiş */
    nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: white;
        padding: 10px 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

    /* Navbar ile içerik arasında boşluk bırak */
    .home-container {
        margin-top: 80px; /* Navbar ile çakışmayı önler */
        text-align: center;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Kart yapısı */
    .welcome-card {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 28px;
        color: #333;
    }

    p {
        font-size: 18px;
        color: #555;
    }

    .btn-primary {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background: #0056b3;
    }
    html, body {
    min-height: 100vh; /* Sayfa yüksekliğini tam ekran yap */
}

</style>
